@model IEnumerable<Race>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id">
                        Detail
                    </a>
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" />
                    <div class="card-body">
                        <h4 class="card-title">@item.Title</h4>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item?.Address?.City, @item?.Address?.State</p>
                    </div>
                    <div class="card-footer card-footer-borderless d-flex justify-content-between">
                        <div>
                            <small>@item.RaceCategory</small>
                        </div>
                        <div>
                            <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
